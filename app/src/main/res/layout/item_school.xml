<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_school_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccentWhite"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/school_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:contentDescription="employee_image"
        android:scaleType="fitStart"
        android:src="@drawable/profile_circular_border_imageview"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/school_image"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/school_image"
        android:fontFamily="sans-serif-light"
        android:paddingEnd="12dp"
        android:paddingStart="16dp"
        android:textColor="@color/colorPrimaryBlue"
        android:textSize="18sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/school_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_name"
        android:layout_toEndOf="@+id/school_image"
        android:fontFamily="sans-serif-light"
        android:paddingEnd="12dp"
        android:paddingStart="16dp"
        android:textAppearance="@style/TextAppearance.FontPath.Roboto.Light"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/school_static"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignStart="@id/school_person"
        android:layout_below="@id/school_person"
        android:paddingEnd="12dp"
        android:paddingStart="15dp"
        android:text="Student Goal Clarity Person"
        android:textColor="#898989"
        android:textSize="12sp"
        android:textStyle="italic"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/school_static"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:background="#d6d6d6" />


</RelativeLayout>