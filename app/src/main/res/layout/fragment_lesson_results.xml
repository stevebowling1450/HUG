<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <View
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/lesson_result_lesson_number"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:text="----"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/center"
            android:layout_below="@+id/lesson_result_lesson_number"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            app:layout_widthPercent="50%">

            <TextView
                android:id="@+id/first_attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/_1st_attempt"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/first_attempt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="@string/date"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/first_attempt_date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#00b2e2"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/first_attempt_fluency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="@string/fluency"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/first_attempt_fluency_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#00b2e2"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/first_attempt_accumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="@string/acumen"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/first_attempt_accumen_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#00b2e2"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/first_attempt_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:text="@string/mood"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/first_attempt_mood_display"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/load"
                android:textAlignment="center"
                android:tint="#00b2e2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/left_layout"
            android:layout_toEndOf="@+id/left_layout"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            app:layout_widthPercent="50%">

            <TextView
                android:id="@+id/second_attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/_2nd_attempt"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/second_attempt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="@string/date"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/second_attempt_date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#1b3d6e"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/second_attempt_fluency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:paddingTop="36dp"
                android:text="@string/fluency"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/second_attempt_fluency_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#1b3d6e"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/second_attempt_accumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="@string/acumen"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/second_attempt_accumen_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/load"
                android:textAlignment="center"
                android:textColor="#1b3d6e"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/second_attempt_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:text="@string/mood"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/second_attempt_mood_display"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/load"
                android:textAlignment="center"
                android:tint="#1b3d6e" />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v4.widget.NestedScrollView>