<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_menu_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginTop="25dp"
    android:background="@color/colorAccentWhite"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/item_menu_settings_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/settings_grey_background"
        android:clickable="true">

        <ImageView
            android:id="@+id/ic_nav_menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_cog" />

        <TextView
            android:id="@+id/nav_menu_settings_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_nav_menu_settings"
            android:text="@string/navigation_menu_item_settings"
            android:textColor="@color/settings_grey_Text_icon_background"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/volunteer_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Volunteer Schedule" />

    <TextView
        android:id="@+id/volunteer_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Volunteer Directory" />

    <TextView
        android:id="@+id/student_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:text="Student Directory" />

    <TextView
        android:id="@+id/school_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="School Directory" />

    <TextView
        android:id="@+id/lesson_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Lesson Guide" />

</LinearLayout>
